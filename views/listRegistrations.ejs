<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>List registration</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
 <a href="/registrations/search" class="btn btn-secondary mb-3">Search by date</a>
  <h2>Registrations</h2>
  <div class="row g-4">
    <% if (registrations.length===0) { %>
      <p>No students have registered yet</p>
      <% } else { %>
        <% registrations.forEach(reg=> {
          const event = reg.eventId;
          const student = reg.studentId
          %>
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title"><%= event.name %></h5>
                <p class="card-text">
                <strong>Student:</strong> <%= student.username %><br />
                <strong>Description:</strong> <%= event.description %><br />
                <strong>Location:</strong> <%= event.location %><br />
                <strong>Date:</strong> <%= new Date(event.date).toLocaleDateString() %><br />
                <strong>Registered on:</strong> <%= new Date(reg.registrationDate).toLocaleDateString() %>
              </p>
              </div>
            </div>
          </div>
          <div>
          </div>
          <% }) %>
            <% } %>
  </div>

</body>

</html>